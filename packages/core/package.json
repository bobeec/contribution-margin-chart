{
  "name": "@contribution-margin/core",
  "version": "0.2.0",
  "description": "Core calculation and layout engine for CVP (Cost-Volume-Profit) analysis charts - Chart library agnostic",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./calculator": {
      "types": "./dist/calculator/index.d.ts",
      "import": "./dist/calculator/index.mjs",
      "require": "./dist/calculator/index.js"
    },
    "./validator": {
      "types": "./dist/validator/index.d.ts",
      "import": "./dist/validator/index.mjs",
      "require": "./dist/validator/index.js"
    },
    "./layout": {
      "types": "./dist/layout/index.d.ts",
      "import": "./dist/layout/index.mjs",
      "require": "./dist/layout/index.js"
    },
    "./formatter": {
      "types": "./dist/formatter/index.d.ts",
      "import": "./dist/formatter/index.mjs",
      "require": "./dist/formatter/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "cvp-analysis",
    "contribution-margin",
    "break-even-point",
    "management-accounting",
    "calculation-engine",
    "layout-engine"
  ],
  "author": "Contribution Margin Chart Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/contribution-margin/contribution-margin-chart.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/contribution-margin/contribution-margin-chart/issues"
  },
  "homepage": "https://github.com/contribution-margin/contribution-margin-chart/tree/main/packages/core#readme",
  "devDependencies": {
    "@vitest/coverage-v8": "^1.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "sideEffects": false
}
